<h1 class="pb-4">Search Results</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(recipe != '') { %>
    <% recipe.forEach(function(recipe, index){ %>
    <a href="/recipe/<%= recipe._id %>" class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy">
      </div>
      <div class="pt-1"><%= recipe.name %></div>
    </a>
    <% }) %>
  <% } else { %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">No Results</h5>
        <h6 class="card-subtitle mb-2 text-muted">You are Unlucky</h6>
        <p class="card-text">Search Recipe Not to Be Founded</p>
        <a href="/" class="btn btn-primary">Home</a>
        <a href="/categories" class="btn btn-secondary">Categories</a>
      </div>
    </div>
    <!-- <p>No items found.</p> -->
  <% } %>
</div>